Package: asciicast
Title: Create 'Ascii' Screen Casts from R Scripts
Version: 1.0.0.9000
Authors@R: c(
    person(given = "Gábor",
           family = "Csárdi",
           role = c("aut", "cre"),
           email = "csardi.gabor@gmail.com"),
    person(given = "Romain",
           family = "Francois",
           role = "aut"),
